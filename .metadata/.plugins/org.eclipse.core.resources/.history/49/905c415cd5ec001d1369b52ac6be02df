package backjun.step6.step01;

import java.math.BigInteger;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int num = sc.nextInt();
		long scr = 0;
		
		for(int i=0; i < num; i++) {
			scr = num*4;
		}
		System.out.println(scr);

	}

}
